<FilterPart>:
    MDCard:
        shadow_softness: 2
        shadow_offset: (1, 1)
        size_hint: 1, .6
        pos_hint: {'center_x': 0.5, 'center_y': 0.9}
        radius: [dp(15)]
        elevation: 1
        
        MDBoxLayout:
            orientation: 'horizontal'
            pos_hint: {'center_x': 0.5, 'center_y': 0.6}
            padding: [dp(5),0]
            spacing: 2
            
            MDScreen:
                radius: [dp(15)]
                md_bg_color: 0, 0.56, 0.33, 0.15
                size_hint:  0.2, 0.85
                pos_hint: {'center_x': .5}

                MDBoxLayout:
                    orientation: 'horizontal'
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    padding: [dp(10),0]
                    spacing: 3

                    MDIcon:
                        icon: "format-text"
                        theme_text_color: "Custom"
                        text_color: "#009455"
                        bold: True
                        pos_hint: {"center_x": .5, "center_y": .5}
                     

                    MDTextField:
                        hint_text: "Mot clé"
                        active_line: False
                        line: False
                        fill_color_focus: "#009455"
                        pos_hint: {"center_x": .5, "center_y": .5}
                        line_color_normal: 0, 0.56, 0.33, 0.15


                    MDIconButton:
                        icon: "select-remove"
                        theme_text_color: "Custom"
                        text_color: "#009455"
                        bold: True
                        pos_hint: {"center_x": .5, "center_y": .5}
        
                

            MDScreen:
                radius: [dp(15)]
                md_bg_color: 0, 0.56, 0.33, 0.15
                size_hint:  0.2, 0.85
                pos_hint: {'center_x': .5}

                MDBoxLayout:
                    orientation: 'horizontal'
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    padding: [dp(10),0]
                    spacing: 3

                    MDIcon:
                        icon: "view-dashboard-outline"
                        theme_text_color: "Custom"
                        text_color: "#009455"
                        pos_hint: {"center_x": .5, "center_y": .5}
                     

                    MDFlatButton:
                        text: "Thématique"
                        theme_text_color: "Custom"
                        text_color: "#606764"
                        size_hint: .7, 1
                        pos_hint: {"center_y": .5}


                    MDIconButton:
                        icon: "chevron-down"
                        theme_text_color: "Custom"
                        text_color: "#009455"
                        pos_hint: {"center_x": .5, "center_y": .5}

            
            MDScreen:
                radius: [dp(15)]
                md_bg_color: 0, 0.56, 0.33, 0.15
                size_hint:  0.2, 0.85
                pos_hint: {'center_x': .5}

                MDBoxLayout:
                    orientation: 'horizontal'
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    padding: [dp(10),0]
                    spacing: 3

                    MDIcon:
                        icon: "book-open-outline"
                        theme_text_color: "Custom"
                        text_color: "#009455"
                        pos_hint: {"center_x": .5, "center_y": .5}
                     

                    MDFlatButton:
                        text: "Type"
                        theme_text_color: "Custom"
                        text_color: "#606764"
                        size_hint: .7, 1
                        pos_hint: {"center_y": .5}


                    MDIconButton:
                        icon: "chevron-down"
                        theme_text_color: "Custom"
                        text_color: "#009455"
                        pos_hint: {"center_x": .5, "center_y": .5}

            MDCard:
                radius: [dp(15)]
                md_bg_color: '#009455'
                size_hint:  0.2, 0.85
                pos_hint: {'center_x': .5}

                MDBoxLayout:
                    orientation: 'horizontal'
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    padding: [dp(10),0]
                    spacing: 3

                    MDSwitch:
                        size_hint: .1, .1
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5}

                    MDTextButton:
                        text: "Rechercher..."
                        theme_text_color: "Custom"
                        text_color: "#ffffff"
                        bold: True
                        halign: "center"
                        size_hint: .5, 1
             
                    

    MDScreen:
        size_hint: 1, .4
        pos_hint: {'center_x': 0.5, 'center_y': 0.4}

        MDBoxLayout:
            orientation: 'horizontal'
            pos_hint: {'center_y': 0.5}
            padding: [dp(10),0]

            MDLabel:
                text: "Categorie:"
                color: "grey"
                font_size: "14sp"
                size_hint: .1, 1
                pos_hint: {'center_y': 0.5}
                
            MDScrollView:
                size_hint: .9, 1
                MDBoxLayout:
                    orientation: 'horizontal'
                    pos_hint: {'center_x': 0, 'center_y': 0.5}
                    spacing: 5
                    
                    MDRoundFlatIconButton:
                        text: "Convention et relations internationaux"
                        icon: "check"
                        md_bg_color: 0, 0.56, 0.33, 0.15
                        text_color: "#009455"
                        size_hint_y: 0.65
                        pos_hint: {'center_y': 0.5}

                    MDRoundFlatButton:
                        text: "Reglement general"
                        text_color: "#606764"
                        pos_hint: {'center_y': 0.5}
                        size_hint_y:  0.65
                    
                    MDRoundFlatButton:
                        text: "Contrat internationnal"
                        text_color: "#606764"
                        pos_hint: {'center_y': 0.5}
                        size_hint_y:  0.65

                    MDRoundFlatButton:
                        text: "Texte de procedure"
                        text_color: "#606764"
                        pos_hint: {'center_y': 0.5}
                        size_hint_y:  0.65






