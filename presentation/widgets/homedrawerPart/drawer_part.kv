#:import TooltipMDIconButton presentation.widgets.mdTooltipIconButton.mdtooltipiconbutton.TooltipMDIconButton

<DrawerPart>:# Définir tous les coins à 0
    MDBoxLayout:
        orientation: 'vertical'
        padding: dp(10)

        MDCard:
            size_hint: None, None
            size: root.width * .8, root.width * .8
            radius: [dp(100), ]
            pos_hint: {'center_x': 0.5, }
            md_bg_color: "#ffffff"

            Image:
                source: 'assets/logo.png'
                size_hint: 1, 1

        MDBoxLayout:
            orientation: 'vertical'
            size_hint: 1,1
            pos_hint: {'center_x': .5, 'center_y': .5}

            MDCard:
                md_bg_color: "#009455"
                pos_hint: {'center_x': .5, 'center_y': .5}
                
                MDBoxLayout:
                    orientation: "vertical"
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    size_hint: None, None
                    size: self.minimum_size

                    TooltipMDIconButton:
                        icon: "translate"
                        tooltip_text: "Changer de langue"
                        icon_size: "26sp"
                        theme_text_color: "Custom"
                        text_color: "#ffffff"
                        pos_hint: {"center_x": .5}

                    TooltipMDIconButton:
                        icon: "wifi-check"
                        tooltip_text: "En ligne"
                        icon_size: "26sp"
                        theme_text_color: "Custom"
                        text_color: "#ffffff"
                        pos_hint: {"center_x": .5}

                    TooltipMDIconButton:
                        icon: "database-import"
                        tooltip_text: "Importer les données"
                        icon_size: "26sp"
                        theme_text_color: "Custom"
                        text_color: "#ffffff"
                        pos_hint: {"center_x": .5}

                    TooltipMDIconButton:
                        icon: "database-export"
                        tooltip_text: "Exporter les données"
                        icon_size: "26sp"
                        theme_text_color: "Custom"
                        text_color: "#ffffff"
                        pos_hint: {"center_x": .5}
                    
                    TooltipMDIconButton:
                        icon: "database-remove"
                        tooltip_text: "Effacer les données"
                        icon_size: "26sp"
                        theme_text_color: "Custom"
                        text_color: "#ffffff"
                        pos_hint: {"center_x": .5}

                    TooltipMDIconButton:
                        icon: "file-download"
                        tooltip_text: "Télécharger tous les données"
                        icon_size: "26sp"
                        theme_text_color: "Custom"
                        text_color: "#ffffff"
                        pos_hint: {"center_x": .5}

                    TooltipMDIconButton:
                        icon: "information"
                        tooltip_text: "A propos de l'application"
                        icon_size: "26sp"
                        theme_text_color: "Custom"
                        text_color: "#ffffff"
                        pos_hint: {"center_x": .5}

        MDIconButton:
            icon: "power"
            icon_size: "32sp"
            theme_text_color: "Custom"
            text_color: "#ffffff"
            pos_hint: {"center_x": .5}